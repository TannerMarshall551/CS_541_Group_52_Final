      <h2>Let's Sign You In!</h2>
      <form id="loginForm" method="POST" action="/account/login">

          <label for="emailInput">Email:</label>
          <input type="email" id="emailInput" name="emailInput" placeholder="jon.snow@gmail.com" value="{{data.emailInput}}"><br>

          <label for="passwordInput">Password:</label>
          <input type="password" id="passwordInput" name="passwordInput" placeholder="*********" value="{{data.passwordInput}}"><br>

        <a href="forgot-password.html">Forgot Password?</a><br>
        <button type="submit">Login</button><br>

          <p>Don't have an account? <a href="/account/create">Sign up now</a></p>
          <a href="/">Homepage</a>
          
        </div>
      </form>
      {{#if hasErrors}}
      <ul class="error-list">
      {{#each errors}}
        <li>
          {{this}}
        </li>
      {{/each}}
      </ul>
      {{/if}}
    </div>
  </div>
</body>
</html>
