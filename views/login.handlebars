<!DOCTYPE html>
<html>
<head>
  <title>Login</title>
  <link rel="stylesheet" href="main-styles.css">
</head>
<body>
  <div class="container">
    {{!-- <div class="left-column">
      <img src="/public/images/logo.jpg" alt="Logo" class="logo">
    </div> --}}
    <div class="right-column">
      <h2>Let's Sign You In!</h2>
      <form id="loginForm" method="POST" action="/account/login">
        <div class="form-group">
          <label for="emailInput">Email:</label>
          <br>
          <input type="email" id="emailInput" name="emailInput" placeholder="jon.snow@gmail.com" value="{{data.emailInput}}" required>
        </div>
        <div class="form-group">
          <label for="passwordInput">Password:</label>
          <br>
          <input type="password" id="passwordInput" name="passwordInput" placeholder="*********" value="{{data.passwordInput}}" required>
        </div>
        <div class="form-group">
          <a href="forgot-password.html">Forgot Password?</a>
        </div>
        <button type="submit">Login</button>
        <div class="form-group">
          <p>Don't have an account? <a href="/account/create">Sign up now</a></p>
        </div>
        <div class="form-group">
          
        </div>
      </form>
      {{#if hasErrors}}
      <ul class="error-list">
      {{#each errors}}
        <li>
          {{this}}
        </li>
      {{/each}}
      </ul>
      {{/if}}
    </div>
  </div>
</body>
</html>
