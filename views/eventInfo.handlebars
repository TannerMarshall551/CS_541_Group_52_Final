    <head>
        <title>Event Info</title>
        <link rel="stylesheet" href="/public/css/main-styles.css">
        <link rel="stylesheet" href="/public/css/eventInfo.css">
        <meta name="viewport" content="width=device-width">
        <meta charset="utf-8">
    </head>
    <body>
        <h1>{{event.name}}</h1>
        <a href="/" id="home-link">Go Back to Home</a>
        <div class="event-info">
            <div class="info-container">
                <ul>
                    <li class="venue"><strong>{{event.partyVenue}}</strong></li>
                    <li class="date"><strong>{{event.date}}</strong></li>
                    <li>{{event.description}}</li>
                    <li>&#x1f4cd; {{event.location}}</li>
                    <li>&#127926; {{event.musicType}}</li>
                    <li><strong>Minimum Age:</strong> {{event.minimumAge}}</li>
                    <li><strong>Price:</strong> {{event.price}}</li>
                    <li><strong>Max Capacity:</strong> {{event.maximumCapacity}}</li>
                </ul>
                <a href="/events/{{event._id}}/guests">Guest List</a> <br>
                <a href="/events/{{event._id}}/comments">View Comments</a> 
               
            </div>
            <div class="button-container">
                <p id="reg-event-id" hidden>{{event._id}}</p>
                <p id="reg-user-id" hidden>{{userId}}</p>
                <p id="reg-action" hidden>register</p>
                <button id="register-button">Register</button>
                <script src="/public/js/buttonRegister.js"></script>

                <p id="unreg-event-id" hidden>{{event._id}}</p>
                <p id="unreg-user-id" hidden>{{userId}}</p>
                <p id="unreg-action" hidden>unregister</p>
                <button id="unregister-button">Unregister</button>
                <script src="/public/js/buttonUnregister.js"></script>

                <p></p>

                <p id="fav-event-id" hidden>{{event._id}}</p>
                <p id="fav-user-id" hidden>{{userId}}</p>
                <p id="fav-action" hidden>favorite</p>
                <button id="favorite-button">Favorite</button>
                <script src="/public/js/buttonFavorite.js"></script>

                <p id="unfav-event-id" hidden>{{event._id}}</p>
                <p id="unfav-user-id" hidden>{{userId}}</p>
                <p id="unfav-action" hidden>unfavorite</p>
                <button id="unfavorite-button">Unfavorite</button>
                <script src="/public/js/buttonUnFavorite.js"></script>

                <p></p>
                <!--https://publish.twitter.com/?buttonType=TweetButton&widget=Button-->
                <a href="https://twitter.com/share?ref_src=twsrc%5Etfw" class="twitter-share-button" data-text="Check out this cool party!!!" data-url="http://localhost:3000" data-hashtags="FunctionFinder" data-show-count="false">Tweet</a><script async src="https://platform.twitter.com/widgets.js" charset="utf-8"></script>
               
                <a href="mailto:?subject=Check out this website&amp;body=Hey!%0D%0A%0D%0ACheck out this website:%0D%0A%0D%0Alocalhost300" target="_blank">Share via Gmail</a>
            </div>
        </div>
    </body>