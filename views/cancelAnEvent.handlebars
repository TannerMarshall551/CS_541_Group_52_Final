<!DOCTYPE html>
<html>
    <head>
        <title>Cancel an Event</title>
        <link rel="stylesheet" href="/public/css/cancelAnEvent.css">
    </head>
    <body>
        <h1>Select Event to Cancel</h1>
        <a href="/" id="home-link">Go Back to Home</a>

        <div id="event-list">
            {{#each events}}
                <div class="event">
                    <h2>{{title}}</h2>
                    <p>Date: {{date}}</p>
                    <p>Name: {{this.name}}</p>
                    <p>Location: {{location}}</p>
                    <button id="cancel-button" cancel-event-id="{{_id}}">Cancel</button>
                </div>
            {{/each}}
        </div>
        
        <script src="/public/js/cancelAnEvent.js"></script>
    </body>
</html>
