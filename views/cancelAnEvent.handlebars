    <head>
        <title>Cancel an Event</title>
        <link rel="stylesheet" href="/public/css/cancelAnEvent.css">
        <meta name="viewport" content="width=device-width">
        <meta charset="utf-8">
    </head>
    <body>
        <h1>Select Event to Cancel</h1>
        <a href="/" id="home-link">Go Back to Home</a>

        <div id="event-list">
            {{#each events}}
                <div class="event">
                    <h2>{{this.name}}</h2>
                    <p>Date: {{date}}</p>
                    <p>Name: {{this.name}}</p>
                    <p>Location: {{location}}</p>
                    <button id="cancel-button">Cancel</button>
                    <p id="cancel-event-id" hidden>{{_id}}</p>
                </div>
            {{/each}}
        </div>
        
        <script src="/public/js/cancelAnEvent.js"></script>
    </body>